<resources>

    <style name="FabStyle" parent="FabStyleButton">

    </style>

    <style name="FabStyleButton">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:layout_margin">@dimen/spacing_xsmall</item>
        <item name="android:background">@drawable/fab_background</item>
        <item name="android:src">@drawable/ic_share</item>
    </style>


    <style name="AppTheme" parent="AppTheme.Base">

    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item> 
        <item name="colorPrimaryDark">@color/primary_dark</item> 
        <item name="colorControlHighlight">@color/accent_translucent</item> 
        <item name="colorAccent">@color/accent</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <!--item name="android:windowContentOverlay">@drawable/actionbar_shadow</item-->
        <item name="android:windowBackground">@color/window_bg</item>
        <!-- your style -->
        <!--item name="alertDialogTheme">@style/AlertDialogCustom</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item-->
    </style>

    <style name="AppThemeDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>



    <style name="ButtonBase" parent="@android:style/Widget.Button">
        <item name="android:width">32dip</item>
        <item name="android:height">32dip</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonBase">
        <item name="android:drawableLeft">@drawable/ic_facebook</item>
        <item name="android:background">@drawable/btn_facebook</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="ButtonTwitter" parent="ButtonBase">
        <item name="android:drawableLeft">@drawable/ic_twitter</item>
        <item name="android:background">@drawable/btn_twitter</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
    </style>
    <style name="ButtonGooglePlus" parent="ButtonBase">
        <item name="android:drawableLeft">@drawable/ic_googleplus</item>
        <item name="android:background">@drawable/btn_googleplus</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#4CAF50</item>
    </style>


    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="AlertDialogCustom.Destructive">
        <item name="android:buttonBarPositiveButtonStyle">@style/DestructiveButton</item>
    </style>

    <style name="DestructiveButton" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="android:textColor">@color/primary</item>
    </style>
</resources>